sha512sums=('bc2d7ec10dbca3c88f6924d6a9a426cc2e42e0d817752732f0f97ee2b5fb4e03f0f57dd953ac7efed534a7c0f1b7c943b190d1b21bdb57b2129eaa056f1fd7a1'
            '23f764052ef5099e218c9e247f3586171d1d747ee82a800344708c984aedf8404bd747a09500ad0c8f6d0446663261410a9fe92810839e64c762bd7e0adc775a')

package() {
    install -Dvm644 geosite.dat -t "${pkgdir}/usr/share/v2ray-rules-dat/"
    install -Dvm644 geoip.dat -t "${pkgdir}/usr/share/v2ray-rules-dat/"
}
